# -*- mode: python -*-

import utils
from build import build_app
Import('env')

target = "SRFSimpleSolver"

sources = Split("""
SRFSimpleSolver.cpp
""")

caelus_inc = [
'turbulenceModels/',
'turbulenceModels/incompressible/turbulenceModel/lnInclude',
'turbulenceModels/incompressible/RAS/RASModel',
'turbulenceModels/incompressible/RAS/lnInclude',
'transportModels',
'transportModels/incompressible/singlePhaseTransportModel',
'transportModels/incompressible/lnInclude',
'sampling/lnInclude'
]

caelus_libs = [
'core',
'incompressibleTurbulenceModel',
'incompressibleRASModels',
'incompressibleTransportModels',
'turbulenceDerivedFvPatchFields',
'fvOptions',
'sampling'
]

ostype = utils.ostype()
prepend_args = {'CXXFLAGS' : ['-DCONST_TMP']}
if ostype == 'windows':
   prepend_args = {'LINKFLAGS' :
            '-u turbulenceDerivedFvPatchFieldsLoad -u incompressibleRASModelsLoad -u turbulenceDerivedFvPatchFieldsLoad'
}

build_app(env,
          target=target,
          sources=sources,
          caelus_inc=caelus_inc,
          caelus_libs=caelus_libs,
          prepend_args=prepend_args)
