# -*- mode: python -*-

from build import build_lib
Import('env')

target = 'scotchDecomp'

sources = Split("""
scotchDecomp.cpp
""")

caelus_inc = [
"parallel/decompose/decompositionMethods/lnInclude",
env['SCOTCH_INC_PATH']
]

caelus_libs = [
'core',
'decompositionMethods',
'scotch',
'scotcherr',
'scotcherrexit'
]

append_args = dict(
    LIBPATH=[
        env['SCOTCH_LIB_PATH']
    ]
)

prepend_args = { 'CXXFLAGS' : ['-DCONST_TMP'] }

build_lib(env,
          target=target,
          sources=sources,
          caelus_inc=caelus_inc,
          caelus_libs=caelus_libs,
          append_args=append_args,
          prepend_args=prepend_args)
